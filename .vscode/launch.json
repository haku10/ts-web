  "version": "0.2.0",
  "configurations": [
    {
      "name": "PyTest",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "module": "pytest",
      "args": ["-sv"],
      "cwd": "${workspaceRoot}",
      "env": {
        "FLASK_APP_ENV": "test"
      },
      "envFile": "${workspaceRoot}/.env.test"
    },
    {
      "name": "Python: Test",
      "type": "python",
      "request": "test",
      "console": "integratedTerminal",
      "env": {
        "FLASK_APP_ENV": "test"
      },
      "envFile": "${workspaceFolder}/.env.test"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "python": "${workspaceFolder}/.venv/bin/python",
      "console": "integratedTerminal"
    }
  ]
}
